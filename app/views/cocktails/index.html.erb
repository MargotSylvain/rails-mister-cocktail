


<!DOCTYPE html>
<html>
<head>
  <title>RailsYelpMvp</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <!-- Add these line for detecting device width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
</head>

<body>
  <%= render "shared/navbar" %>

  <div class="col-xs-12">
    <div class="row text-center">
      <h2>Welcome to Margot's cocktails app</h2>
      <p></p>
      <p><%=link_to "Create a new cocktail", new_cocktail_path %></p>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
            <div class="card-category"><%= %></div>
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
              <%= link_to "See details",cocktail_path(cocktail.id)%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  </div>



</body>
</html>

